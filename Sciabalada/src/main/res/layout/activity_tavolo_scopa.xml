<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    
   <TextView
	    android:id="@+id/puntata"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="30sp"
	    android:layout_marginLeft="50dp"
	    android:layout_marginTop="20dp"
	    android:text="Jackpot" />
    
   <EditText
        android:id="@+id/valuePuntata"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="25sp"
	    android:layout_marginLeft="30dp"
	    android:layout_marginTop="20dp"
	    android:gravity="center"
	    android:layout_toRightOf="@+id/puntata" />
   
    
    <Button
 	    android:id="@+id/play"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="play"
	    android:gravity="center|center"
        android:text="Inizia la partita" 
	    android:layout_marginLeft="70dp"
	    android:layout_marginTop="20dp"
	    android:layout_toRightOf="@+id/valuePuntata" />
    
    <TableLayout 
        android:id="@+id/TableLayout01" 
        android:stretchColumns="*"
        android:layout_height="match_parent" 
        android:layout_width="match_parent"
        android:layout_centerInParent="true" >
   
         <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
	        <ImageView
	            android:id="@+id/angeloCo"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:src="@drawable/angeloco0"
			    android:layout_marginTop="100dp"
	      		android:onClick="setAngeloCo"/>
        
        </TableRow>
        
        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        
  	        <ImageView
	            android:id="@+id/mauroKarmen"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:src="@drawable/maurokarmen0"
			    android:layout_marginTop="10dp"
	      		android:onClick="setMauroKarmen"/>
	        
	    </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        
  	        <ImageView
	            android:id="@+id/renzoKatia"
	      		android:layout_width="wrap_content"
	      		android:layout_height="wrap_content"
	      		android:src="@drawable/renzokatia0"
			    android:layout_marginTop="10dp"
	      		android:onClick="setRenzoKatia"/> 
	        
        </TableRow>
        
      </TableLayout>
    
</RelativeLayout>

